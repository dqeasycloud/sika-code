<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>standard-footer-demo</artifactId>
        <groupId>com.sika.code.standard.footer.demo</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>standard-footer-demo-web</artifactId>

    <dependencies>
        <dependency>
            <groupId>com.sika.code.standard.footer.demo</groupId>
            <artifactId>standard-footer-demo-core</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <!-- develop的节点配置:begin -->
        <!-- 本地环境单节点部署 -->
        <profile>
            <id>develop</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <profileActive>develop</profileActive>
            </properties>
        </profile>
        <!-- develop的节点配置:end -->

        <!-- develop-debug的节点配置:begin -->
        <profile>
            <id>develop-debug</id>
            <properties>
                <profileActive>develop-debug</profileActive>
            </properties>
        </profile>
        <!-- develop-debug的节点配置:end -->

        <!-- test的节点配置:begin -->
        <profile>
            <id>test</id>
            <properties>
                <profileActive>test</profileActive>
            </properties>
        </profile>
        <!-- test的节点配置:end -->

        <!-- advance的节点配置:begin -->
        <profile>
            <id>advance</id>
            <properties>
                <profileActive>advance</profileActive>
            </properties>
        </profile>
        <!-- advance的节点配置:end -->

        <!-- product的节点配置:begin -->
        <profile>
            <id>product</id>
            <properties>
                <profileActive>product</profileActive>
            </properties>
        </profile>
        <!-- product的节点配置:end -->
    </profiles>

    <build>
        <finalName>standard-footer-demo-server</finalName>
        <filters>
            <filter>src/main/resources/application-${profileActive}.yml</filter>
        </filters>
        <!-- 替换${key}内容 -->
        <resources>
            <resource>
                <filtering>true</filtering>
                <!-- 要到达最底层目录 -->
                <directory>src/main/resources/</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>